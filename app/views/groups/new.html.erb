<h1>Create a New Group</h1>

<% if @group.errors.any? %>
  <div>
    <ul>
      <% @group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @group, url: groups_path, local: true do |form| %>
  <div>
    <%= form.label :name, "Group Name" %>
    <%= form.text_field :name %>
  </div>
  
  <div>
    <%= form.label :description, "Group Description" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :owner_id, "Owner ID" %>
    <%= form.text_field :owner_id %> <!-- Это поле можно установить через текущего пользователя, если он залогинен -->
  </div>

  <div>
    <%= form.label :invitation_code, "Invitation Code" %>
    <%= form.text_field :invitation_code %>
  </div>

  <div>
    <%= form.check_box :is_active %>
    <%= form.label :is_active, "Active?" %>
  </div>

  <div>
    <%= form.check_box :distribution_started %>
    <%= form.label :distribution_started, "Distribution Started?" %>
  </div>

  <div>
    <%= form.submit "Create Group" %>
  </div>
<% end %>
