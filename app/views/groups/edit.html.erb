<h1>Edit Group</h1>

<% if @group.errors.any? %>
<div>
    <ul>
        <% @group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<%= form_with model: @group, url: update_group_path(@group), method: :patch, local: true do |form| %>
<div>
    <%= form.label :name, "Group Name" %>
    <%= form.text_field :name %>
</div>

<div>
    <%= form.label :description, "Group Description" %>
    <%= form.text_area :description %>
</div>

<div>
    <%= form.check_box :is_active %>
    <%= form.label :is_active, "Active?" %>
</div>

<div>
    <%= form.check_box :distribution_started %>
    <%= form.label :distribution_started, "Distribution Started?" %>
</div>

<div>
    <%= form.submit "Update Group" %>
</div>
<% end %>

<%= button_to "Delete Group", 
              group_path(@group), 
              method: :delete,
              class: "btn btn-danger",
              data: { turbo_confirm: "Are you sure?" } %>

<%= link_to "Back", group_path(@group) %>